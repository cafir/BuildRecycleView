<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/github_for_atom_edited"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/dummy_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dummy_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:padding="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="casual"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/following" />

    <TextView
        android:id="@+id/dummy_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_alternate_email_24"
        android:gravity="center"
        android:padding="5dp"
        android:text="username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_name"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/dummy_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_group_24"
        android:gravity="end"
        android:padding="5dp"
        android:text="000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_username"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/dummy_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="XXX"
        app:layout_constraintBaseline_toBaselineOf="@+id/following"
        app:layout_constraintStart_toEndOf="@+id/following"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/dummy_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_business_24"
        android:padding="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_location"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/dummy_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_book_24"
        android:padding="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_company"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/dummy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_img"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/following"
        app:layout_constraintBaseline_toBaselineOf="@+id/dummy_following"
        app:layout_constraintStart_toEndOf="@+id/dummy_following"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <TextView
        android:id="@+id/follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/follower"
        app:layout_constraintBaseline_toBaselineOf="@+id/dummy_follower"
        app:layout_constraintStart_toEndOf="@+id/dummy_follower"
        android:textColor="@color/white"
        android:fontFamily="casual"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="121dp" />



</androidx.constraintlayout.widget.ConstraintLayout>